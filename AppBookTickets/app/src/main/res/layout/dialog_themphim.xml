<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="400dp"
    android:orientation="vertical"

    android:layout_gravity="center">
    <!--android:background="@drawable/shape_background_dialog"-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="THÊM PHIM"
        android:gravity="center"
        android:textSize="40dp"
        android:textColor="#50473A"
        android:textStyle="bold"
        />
    <!--android:fontFamily="@font/kg_sollid"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edtTenPhim"
            android:hint="Nhập tên phim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <!--android:fontFamily="@font/roboto_medium"-->
        <Spinner
            android:id="@+id/spnTheLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/ivHinhAnh"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_add_24"
            android:padding="10dp"/>
        <!--android:src="@drawable/add_image"
        android:background="@drawable/shape_themphim_dialog"
        -->
    </LinearLayout>

</LinearLayout>